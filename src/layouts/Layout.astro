---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Henna Happens</title>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  /* Google fonts Montserrat */
  @import url("https://fonts.googleapis.com/css2?family=Bodoni+Moda:opsz@6..96&family=Cinzel&family=Cormorant:ital@1&family=Montserrat:ital,wght@0,400;0,600;1,400&display=swap");

  /* Register your custom font family and tell the browser where to find it.
@font-face {
  font-family: 'DistantGalaxy';
  src: url('/fonts/DistantGalaxy.woff') format('woff');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}
*/
  h2 {
    font-family: "Cinzel", serif;
    color: #383533;
    margin-bottom: 20px;
    font-size: 1.875rem;
  }
  h4 {
    font-family: "Cinzel", serif;
    color: #383533;
    font-size: 1.25rem;
    line-height: 100%;
    font-weight: 400;
  }
  p {
    font-family: "Montserrat", sans-serif;
    color: #413c3b;
    font-size: 16px;
    line-height: 20px;
    margin-bottom: 20px;
  }
  button {
    font-family: "Montserrat", sans-serif;
    color: #383533;
    font-size: 16px;
    line-height: 140%;
  }
</style>
